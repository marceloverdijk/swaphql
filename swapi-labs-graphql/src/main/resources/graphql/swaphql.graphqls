type Query {

    version: String!

    planets(page: Int = 1, size: Int = 10): [Planet]!
    planet(planetId: ID!): Planet
}

scalar Date
scalar DateTime

type Planet {
    id: ID!
    name: String!
    rotationPeriod: String!
    orbitalPeriod: String!
    diameter: String!
    climate: String!
    gravity: String!
    terrain: String!
    surfaceWater: String!
    population: String!
    created: DateTime!
    edited: DateTime!
}
