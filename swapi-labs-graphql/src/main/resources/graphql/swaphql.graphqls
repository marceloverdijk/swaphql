type Query {

    version: String!

    persons(page: Int = 1, size: Int = 10): [Person]!
    person(personId: ID!): Person

    planets(page: Int = 1, size: Int = 10): [Planet]!
    planet(planetId: ID!): Planet

    films(page: Int = 1, size: Int = 10): [Film]!
    film(filmId: ID!): Film

    species(page: Int = 1, size: Int = 10): [Species]!
    getSpeciesById(speciesId: ID!): Species

    vehicles(page: Int = 1, size: Int = 10): [Vehicle]!
    vehicle(vehicleId: ID!): Vehicle

    # starships(page: Int = 1, size: Int = 10): [Starship]!
    # starship(starshipId: ID!): Starship
}

scalar Date
scalar DateTime
scalar Long

type Person {
    id: ID!
    name: String!
    height: Int
    mass: Float
    hairColor: String
    skinColor: String
    eyeColor: String
    birthYear: String
    gender: String
    homeworld: Planet
    created: DateTime!
    edited: DateTime!
}

type Planet {
    id: ID!
    name: String!
    rotationPeriod: Int
    orbitalPeriod: Int
    diameter: Int
    climate: String
    gravity: String
    terrain: String
    surfaceWater: Int
    population: Long
    residents: [Person]!
    created: DateTime!
    edited: DateTime!
}

type Film {
    id: ID!
    title: String!
    created: DateTime!
    edited: DateTime!
}

type Species {
    id: ID!
    name: String!
    created: DateTime!
    edited: DateTime!
}

type Vehicle {
    id: ID!
    name: String!
    created: DateTime!
    edited: DateTime!
}

type Starship {
    id: ID!
    name: String!
    created: DateTime!
    edited: DateTime!
}
